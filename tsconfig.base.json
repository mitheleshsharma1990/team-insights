{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@team-insights/feature-login": ["libs/auth/feature-login/src/index.ts"],
      "@team-insights/feature-overview": [
        "libs/dashboard/feature-overview/src/index.ts"
      ],
      "@team-insights/user-data-access": ["libs/users/data-access/src/index.ts"],
      "@team-insights/user-data-access/effects": ["libs/users/data-access/src/lib/users.effects.ts"],
    }
  },
  "exclude": ["node_modules", "tmp"]
}
